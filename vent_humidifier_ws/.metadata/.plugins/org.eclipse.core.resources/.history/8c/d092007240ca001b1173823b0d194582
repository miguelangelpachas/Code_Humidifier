/* Sample and update periods */

#define TEMP_SAMPLE_PERIOD_MS							100
#define BUTTON_SCAN_PERIOD_MS							10
#define DISPLAY_UPDATE_PERIOD_MS						100
#define HEATER_PLATE_TEMP_MEASURE_PERIOD_MS				1000
